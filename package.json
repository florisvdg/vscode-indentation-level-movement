{
    "name": "indentation-level-movement",
    "displayName": "Indentation Level Movement (fork)",
    "description": "Fast and efficient vertical movement. Fork for whitespace sensitive languages (pug, sass, python, yaml, etc).",
    "version": "1.1.1",
    "publisher": "florisvdg",
    "icon": "images/indentation-level-movement-icon.png",
    "license": "MIT",
    "bugs": "https://github.com/florisvdg/vscode-indentation-level-movement/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/florisvdg/vscode-indentation-level-movement"
    },
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:indentation-level-movement.moveDown",
        "onCommand:indentation-level-movement.moveUp",
        "onCommand:indentation-level-movement.moveRight",
        "onCommand:indentation-level-movement.selectDown",
        "onCommand:indentation-level-movement.selectUp"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "indentation-level-movement.moveDown",
                "title": "Indentation Level Move Down"
            },
            {
                "command": "indentation-level-movement.moveUp",
                "title": "Indentation Level Move Up"
            },
            {
                "command": "indentation-level-movement.moveRight",
                "title": "Indentation Level Move Right"
            },
            {
                "command": "indentation-level-movement.selectDown",
                "title": "Indentation Level Select Down"
            },
            {
                "command": "indentation-level-movement.selectUp",
                "title": "Indentation Level Select Up"
            }
        ],
        "keybindings": [
            {
                "command": "indentation-level-movement.moveDown",
                "key": "ctrl-down",
                "mac": "alt-down",
                "when": "editorTextFocus"
            },
            {
                "command": "indentation-level-movement.moveUp",
                "key": "ctrl-up",
                "mac": "alt-up",
                "when": "editorTextFocus"
            },
            {
                "command": "indentation-level-movement.moveRight",
                "key": "ctrl-right",
                "mac": "alt-right",
                "when": "editorTextFocus"
            },
            {
                "command": "indentation-level-movement.selectDown",
                "key": "ctrl-shift-down",
                "mac": "alt-shift-down"
            },
            {
                "command": "indentation-level-movement.selectUp",
                "key": "ctrl-shift-up",
                "mac": "alt-shift-up"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
